<style>
    html{
        background: 060c21;
        background-size: cover;
    }
</style>
<p>
    <strong>Title</strong>
    <%=@idea.title%>
</p>

<div class = "menu">
   <a href = "#" class="brand">
       <div class = "loader">
            <span></span>
            <span></span>
            <span></span>
            <span></span> 
        </div>
        <p id = "loaderp">NUI</p>
    </a>
   <nav>
      <ul>
         <li><%= link_to 'Home', ideas_path %></li>
         <li><%= link_to 'New Idea', new_idea_path %></li>
         <li>
            <a href = "#">Categories</a>
            <ul>
               <li><a href = "#">Music</a></li>
               <li><a href = "#">Movies</a></li>
               <li><a href = "#">Theatre</a></li>
               <li><a href = "#">Art</a></li>
            </ul>
         </li>
      </ul>
   </nav>
</div>       

<section class = "showsection">
<div class = "showdetail">
    <div class = "ideastt">
   <p class = "showlabel"><strong>Title</strong></p>
   <p class = "showidea"><%=@idea.title%></p>

    <p class = "showlabel"><strong>Text</strong></p>
    <p class = "showidea"><%=@idea.text%></p>
    </div>

<br><br>
<%= form_for([@idea, @idea.comments.build]) do |idea| %>
 <div class = "showform">
     <h2 class = "addcomtitle">Add a comment</h2>

    <p class = "showlabel"><%= idea.label :commenter %></p>
    <br>
    <p class = "showtitlebox"><%= idea.text_field :commenter %></p>
 

    <p class = "showlabel"><%= idea.label :body %></p>
    <br>
    <p class = "showtextbox"><%= idea.text_area :body %></p>


  <p>
    <%= idea.submit %>
  </p>
  </div>
<% end %> 

<div class = buttons>
<%= link_to edit_idea_path(@idea) do %>
    <span></span>
    <span></span>
    <span></span>
    <span></span>
     Edit
<% end %>

<%= link_to idea_path(@idea),method: :delete, data: { confirm: 'Are you sure?' } do %>
    <span></span>
    <span></span>
    <span></span>
    <span></span>
     Delete
<% end %>

<%= link_to  ideas_path do %>
    <span></span>
    <span></span>
    <span></span>
    <span></span>
     Ideas
<% end %>

<%= link_to  ideas_uprank_path(@idea) do %>
    <span></span>
    <span></span>
    <span></span>
    <span></span>
     Up
<% end %>

<%= link_to  ideas_downrank_path(@idea) do %>
    <span></span>
    <span></span>
    <span></span>
    <span></span>
     Down
<% end %>

</div>

<div class = "additionalinfobox">
    <div class = "additionalinfo">
<p>
    <strong>Type:</strong>
    <%=@idea.type%>
</p>

<p>
    <strong>label:</strong>
    <%=@idea.labelled%>
</p>

<p>
    <strong>up:</strong>
    <%=@idea.up_rank%>
</p>

<p>
    <strong>down:</strong>
    <%=@idea.down_rank%>
</p>

<p>
    <strong>total:</strong>
    <%=@idea.total_rank%>
</p>

<p>
    <strong>created:</strong>
    <%=@idea.created_at%>
</p>

<p>
    <strong>updated:</strong>
    <%=@idea.updated_at%>
</p>
</div>
</div>

<h2 class = "comtitle">Comments</h2>
<% @idea.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

</div>
</section>