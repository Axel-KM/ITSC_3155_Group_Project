<h1>New Idea</h1>

<%= form_for :idea, url: ideas_path do |f| %>
    <p>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title, size: "60x12" %>
    </p>
    <p>
        <%= f.label :text %>
        <br>
        <%= f.text_area :text, size: "60x12" %>
    </p>
    <p>
        <%= f.submit "Post Idea"%>
    </p>
    
    <div>
                                 
        <%= f.select(:labelled, ["Music",
                             "Movies",
                             "Theatre",
                             "Art"],{ :prompt => "Category"},
                                   { :multiple => true, :size => 5 }
                                 ) %>
        
    </div>

    
        
<h1><%= link_to 'Back', ideas_path %></h1>
<%end%>