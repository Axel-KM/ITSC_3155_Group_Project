<h1>New Idea</h1>

<%= form_for :idea, url: ideas_path do |f| %>
    <p>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title, size: "60x12" %>
    </p>
    <p>
        <%= f.label :text %>
        <br>
        <%= f.text_area :text, size: "60x12" %>
    </p>
    <p>
        <%= f.submit "Post Idea"%>
    </p>
    
    <p>
        <%= f.label :type %>
    </p>
    <div>
        <%= radio_button_tag(:type, "Music") %>
        <%= label_tag(:labelled, "Music") %>
        <%= radio_button_tag(:type, "Movies") %>
        <%= label_tag(:labelled, "Movies") %>
        <%= radio_button_tag(:type, "Theatre") %>
        <%= label_tag(:labelled, "Theatre") %>
        <%= radio_button_tag(:type, "Art") %>
        <%= label_tag(:labelled, "Art") %>
    </div>
    
<%end%>